# Production Environment Variables for ForeTel.AI Enterprise

# Database Configuration
DATABASE_URL=postgresql://foretel_user:${DB_PASSWORD}@postgres-cluster:5432/foretel_db
AUTH_DATABASE_URL=postgresql://auth_user:${AUTH_DB_PASSWORD}@postgres-auth:5432/auth_db
MODELS_DATABASE_URL=postgresql://model_user:${MODELS_DB_PASSWORD}@postgres-models:5432/models_db
DATA_DATABASE_URL=postgresql://data_user:${DATA_DB_PASSWORD}@postgres-data:5432/data_db

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
REDIS_PASSWORD=your_secure_redis_password_here

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=foretel_kafka_user
KAFKA_SASL_PASSWORD=${KAFKA_PASSWORD}

# Authentication & Security
JWT_SECRET=your_jwt_secret_key_256_bits_minimum_length_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=https://foretel.ai/auth/callback

# Encryption Keys
ENCRYPTION_KEY=your_aes_256_encryption_key_here
FERNET_KEY=your_fernet_encryption_key_here

# API Configuration
API_VERSION=v1
API_BASE_URL=https://api.foretel.ai
RATE_LIMIT_PER_MINUTE=1000
CORS_ORIGINS=https://foretel.ai,https://app.foretel.ai

# MLflow Configuration
MLFLOW_TRACKING_URI=https://mlflow.foretel.ai
MLFLOW_BACKEND_STORE_URI=postgresql://mlflow_user:${MLFLOW_DB_PASSWORD}@postgres-mlflow:5432/mlflow_db
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://foretel-mlflow-artifacts
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com

# Airflow Configuration
AIRFLOW__CORE__EXECUTOR=CeleryExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql://airflow_user:${AIRFLOW_DB_PASSWORD}@postgres-airflow:5432/airflow_db
AIRFLOW__CELERY__BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
AIRFLOW__CELERY__RESULT_BACKEND=db+postgresql://airflow_user:${AIRFLOW_DB_PASSWORD}@postgres-airflow:5432/airflow_db
AIRFLOW_FERNET_KEY=your_airflow_fernet_key_here
AIRFLOW_SECRET_KEY=your_airflow_secret_key_here

# Monitoring Configuration
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_PASSWORD=your_secure_grafana_password
ELASTICSEARCH_URL=http://elasticsearch:9200
KIBANA_URL=http://kibana:5601

# Cloud Provider Configuration (AWS)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-west-2
S3_BUCKET_NAME=foretel-ai-data
S3_MODELS_BUCKET=foretel-ai-models

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/foretel.crt
SSL_KEY_PATH=/etc/ssl/private/foretel.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/foretel/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=10

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
MAX_REQUESTS_PER_WORKER=1000
WORKER_TIMEOUT=30

# Feature Flags
ENABLE_REAL_TIME_PREDICTIONS=true
ENABLE_AUTO_ML=true
ENABLE_DEEP_LEARNING=true
ENABLE_STREAMING_ANALYTICS=true
ENABLE_ADVANCED_SECURITY=true

# Business Intelligence Integration
TABLEAU_SERVER_URL=https://tableau.company.com
TABLEAU_USERNAME=foretel_service_account
TABLEAU_PASSWORD=${TABLEAU_PASSWORD}
POWER_BI_CLIENT_ID=your_power_bi_client_id
POWER_BI_CLIENT_SECRET=${POWER_BI_CLIENT_SECRET}

# CRM/ERP Integration
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=${SALESFORCE_CLIENT_SECRET}
SALESFORCE_USERNAME=foretel@company.com
SALESFORCE_PASSWORD=${SALESFORCE_PASSWORD}
SAP_HOST=sap.company.com
SAP_USERNAME=foretel_sap_user
SAP_PASSWORD=${SAP_PASSWORD}

# Notification Services
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=notifications@foretel.ai
SMTP_PASSWORD=${SMTP_PASSWORD}
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
TEAMS_WEBHOOK_URL=https://company.webhook.office.com/webhookb2/your/webhook/url

# Backup and Disaster Recovery
BACKUP_S3_BUCKET=foretel-ai-backups
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
DR_REGION=us-east-1
DR_DATABASE_URL=postgresql://foretel_user:${DB_PASSWORD}@postgres-dr:5432/foretel_db

# Cost Optimization
AUTO_SCALING_MIN_INSTANCES=2
AUTO_SCALING_MAX_INSTANCES=20
AUTO_SCALING_TARGET_CPU=70
SPOT_INSTANCES_ENABLED=true
COST_ALERTS_THRESHOLD=1000

# Compliance and Audit
AUDIT_LOG_ENABLED=true
AUDIT_LOG_S3_BUCKET=foretel-ai-audit-logs
GDPR_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555  # 7 years
PII_ENCRYPTION_ENABLED=true

# Development/Testing (set to false in production)
DEBUG=false
TESTING=false
MOCK_EXTERNAL_APIS=false
ENABLE_SWAGGER_UI=false
